
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_LayoutPagewebsite.cshtml";
}

<body>
<section>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/component/img/services/bg1.jpg" class="d-block w-100" alt="..." height="600px">
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-info text-center">Services<hr style="height: 10px;color: black;"></h1>
            </div>

            <div class="col-md-4 mb-5">
                <div class="card" width="" style="box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="~/component/img/services/delivery.jpg" class="card-img-top" height="270px">
                            <div class="card-body">
                                <h5 class="card-title">Delivery</h5>
                                <p class="card-text">This is my first card This is my first card This is my first card</p>
                                <a href="#" data-images="~/component/img/services/delivery.jpg" data-heading="Delivery" data-para="This is my first card This is my first card This is my first card" class="btn getimage btn-primary form-control" data-bs-toggle="modal" data-bs-target="#exampleModal">Visit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-5">
                <div class="card" width="" style="box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="~/component/img/services/dine.jpg" class="card-img-top" height="270px">
                            <div class="card-body">
                                <h5 class="card-title">Dine In</h5>
                                <p class="card-text">This is my first card This is my first card This is my first card</p>
                                <a href="#" data-images="~/component/img/services/dine.jpg" data-heading="Dine In" data-para="This is my first card This is my first card This is my first card" class="btn getimage btn-primary form-control" data-bs-toggle="modal" data-bs-target="#exampleModal">Visit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-5">
                <div class="card" width="" style="box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;">
                    <div class="row">
                        <div class="col-md-12">
                            <img src="~/component/img/services/take.jpg" class="card-img-top" height="270px">
                            <div class="card-body">
                                <h5 class="card-title">Take Away</h5>
                                <p class="card-text">This is my first card This is my first card This is my first card</p>
                                <a href="#" data-images="~/component/img/services/take.jpg" data-heading="Take Away" data-para="This is my first card This is my first card This is my first card" class="btn getimage btn-primary form-control" data-bs-toggle="modal" data-bs-target="#exampleModal">Visit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
</section>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <img src="" class="img-fluid" id="addimage">
                    </div>
                    <div class="col-md-12">
                        <p id="pa" style="margin: 10px;color: seagreen;"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

<script>
        $(document).ready(function(){
            $('body').on('click','.getimage',function(){
          //     alert("getvalue");
               var image = $(this).data("images");
               $('#addimage').attr("src",image);
               $('#exampleModalLabel').html($(this).data('heading'));
               $('#pa').html($(this).data('para'));
            })
        })
</script>
</body>

